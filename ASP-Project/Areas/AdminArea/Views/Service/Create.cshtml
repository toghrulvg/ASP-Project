@using ASP_Project.ViewModels.ServiceViewModels
@model ServiceCreateVM
@{
    ViewData["Title"] = "Edit";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Product
                        </p>
                        <form asp-controller="Service" asp-action="Create" enctype="multipart/form-data" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Header">Header</label>
                                <input class="form-control" asp-for="Header">
                                <span asp-validation-for="Header" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Desc">Desc</label>
                                <input class="form-control" asp-for="Desc">
                                <span asp-validation-for="Desc" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Color">Color</label>
                                <input class="form-control" asp-for="Color">
                                <span asp-validation-for="Color" class="text-danger my-1"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo" class="text-danger my-1"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Service" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
