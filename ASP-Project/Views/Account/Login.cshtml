@using ASP_Project.ViewModels.AccountViewModels
@model LoginVM
@{
    ViewData["Title"] = "Register";
}

<h1>Sign in</h1>

<main>
    <section id="register">
        <div class="container-fluid">
            <div class="register-area">
                <div class="image"></div>
                <form method="post" asp-controller="Account" asp-action="Login" enctype="multipart/form-data" style="width:50%">
                    <div class="register w-100">
                        <div class="text-danger" asp-validation-summary="All"> </div>
                        
                        <div></div>
                        

                        


                        <label asp-for="EmailOrUsername">
                            <input placeholder="Email " asp-for="EmailOrUsername" />

                            <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
                        </label>

                        <label asp-for="Password">
                            <input placeholder="Password " asp-for="Password" />

                            <span class="text-danger" asp-validation-for="Password"></span>
                        </label>

                        

                        <button type="submit" class="my-5">Sign In</button>

                        <p style="margin-top: 24px">
                            Already have an account? <a href="">Sign in</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </section>

</main>


